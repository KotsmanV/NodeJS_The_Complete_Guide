        <ul class="main-header__item-list">
            <li class="main-header__item"><a class="{{#if activeShop}}active{{/if}}" href="/">Shop</a></li>
            <li class="main-header__item"><a class="{{#if activeProducts}}active{{/if}}" href="/products">Products</a></li>

