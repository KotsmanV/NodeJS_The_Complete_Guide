{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "${workspaceFolder}\\"
            ],
            "program": "${workspaceFolder}\\eshop_tutorial_app\\src\\app.ts",
            "sourceMaps": true,
            "smartStep": true,
            "restart": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}\\eshop_tutorial_app"
        }
    ]
}